<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CimenogluCourse</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/tailwind.css" rel="stylesheet" />
    @* <link rel="stylesheet" href="~/CimenogluCourse.styles.css" asp-append-version="true" /> *@
</head>
<body class="flex flex-col min-h-screen">

    <header class="h-16">
        <nav class="bg-sky-600 p-4">
            <div class="container mx-auto flex justify-between items-center">
                <!-- Logo and Company Name -->
                <div class="flex items-center space-x-2">
                    <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                                    <g
                                        id="SVGRepo_tracerCarrier"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"></g>
                                    <g id="SVGRepo_iconCarrier">
                                        <path
                                            d="M21.1938 2.80624C22.2687 3.88124 22.2687 5.62415 21.1938 6.69914L20.6982 7.19469C20.5539 7.16345 20.3722 7.11589 20.1651 7.04404C19.6108 6.85172 18.8823 6.48827 18.197 5.803C17.5117 5.11774 17.1483 4.38923 16.956 3.8349C16.8841 3.62781 16.8366 3.44609 16.8053 3.30179L17.3009 2.80624C18.3759 1.73125 20.1188 1.73125 21.1938 2.80624Z"
                                            fill="#dee203"></path>
                                        <path
                                            d="M14.5801 13.3128C14.1761 13.7168 13.9741 13.9188 13.7513 14.0926C13.4886 14.2975 13.2043 14.4732 12.9035 14.6166C12.6485 14.7381 12.3775 14.8284 11.8354 15.0091L8.97709 15.9619C8.71035 16.0508 8.41626 15.9814 8.21744 15.7826C8.01862 15.5837 7.9492 15.2897 8.03811 15.0229L8.99089 12.1646C9.17157 11.6225 9.26191 11.3515 9.38344 11.0965C9.52679 10.7957 9.70249 10.5114 9.90743 10.2487C10.0812 10.0259 10.2832 9.82394 10.6872 9.41993L15.6033 4.50385C15.867 5.19804 16.3293 6.05663 17.1363 6.86366C17.9434 7.67069 18.802 8.13296 19.4962 8.39674L14.5801 13.3128Z"
                                            fill="#dee203"></path>
                                        <path
                                            d="M20.5355 20.5355C22 19.0711 22 16.714 22 12C22 10.4517 22 9.15774 21.9481 8.0661L15.586 14.4283C15.2347 14.7797 14.9708 15.0437 14.6738 15.2753C14.3252 15.5473 13.948 15.7804 13.5488 15.9706C13.2088 16.1327 12.8546 16.2506 12.3833 16.4076L9.45143 17.3849C8.64568 17.6535 7.75734 17.4438 7.15678 16.8432C6.55621 16.2427 6.34651 15.3543 6.61509 14.5486L7.59235 11.6167C7.74936 11.1454 7.86732 10.7912 8.02935 10.4512C8.21958 10.052 8.45272 9.6748 8.72466 9.32615C8.9563 9.02918 9.22032 8.76528 9.57173 8.41404L15.9339 2.05188C14.8423 2 13.5483 2 12 2C7.28595 2 4.92893 2 3.46447 3.46447C2 4.92893 2 7.28595 2 12C2 16.714 2 19.0711 3.46447 20.5355C4.92893 22 7.28595 22 12 22C16.714 22 19.0711 22 20.5355 20.5355Z"
                                            fill="#dee203"></path>
                                    </g>
                    </svg>
                    <span class="text-white text-lg font-bold hidden md:block">Çimenoğlu Akademi</span>
                </div>

                <!-- Menu Items (Centered) -->
                <div class="hidden md:flex flex-1 justify-center text-white">
                    <ul class="flex space-x-8 text-yellow-400 relative">
                        <li class="min-w-[50px] lg:min-w-[120px]"><a href="/" class="hover:text-yellow-200 hover:font-semibold hover:underline text-center">Anasayfa</a></li>
                        <li class="min-w-[50px] lg:min-w-[120px] relative group">
                            <a href="#" class="hover:text-yellow-200 hover:font-semibold hover:underline text-center">Kurslar</a>
                            <!-- Dropdown Menü -->
                            <ul class="absolute left-0 top-full hidden group-hover:block bg-sky-600 shadow-lg">
                                <li class="min-w-[150px]"><a href="/courses" class="block px-4 py-2 text-yellow-400 hover:text-white hover:bg-sky-400">Kurslar</a></li>
                                <li class="min-w-[150px]"><a href="/students" class="block px-4 py-2 text-yellow-400 hover:text-white hover:bg-sky-400">Öğrenci</a></li>
                                <li class="min-w-[150px]"><a href="/teachers" class="block px-4 py-2 text-yellow-400 hover:text-white hover:bg-sky-400">Eğitmen</a></li>
                            </ul>
                        </li>
                        <li class="min-w-[50px] lg:min-w-[120px]"><a href="/Hakkımızda" class="hover:text-yellow-200 hover:font-semibold hover:underline text-center">Hakkımızda</a></li>
                        <li class="min-w-[50px] lg:min-w-[120px]"><a href="/haberler" class="hover:text-yellow-200 hover:font-semibold hover:underline text-center">Haberler</a></li>
                        <li class="min-w-[50px] lg:min-w-[120px]"><a href="/iletisim" class="hover:text-yellow-200 hover:font-semibold hover:underline text-center">İletişim</a></li>
                    </ul>
                </div>

                <!-- Hamburger Menu Icon for Mobile -->
                <div class="md:hidden block">
                    <button id="menu-btn" class="text-white focus:outline-none">
                        <svg class="w-6 h-6 text-yellow-500 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div class="overflow-hidden transition-all duration-500 z-50 absolute top-16 left-0 w-full bg-sky-600" id="mobile-menu" style="--height: 200px; height: 0;">
                <ul class="flex flex-col mt-4 space-y-2 text-white pl-5">
                    <li class="min-w-[120px]"><a href="/" class="hover:text-gray-300 hover:underline text-center">Anasayfa</a></li>
                    <li class="min-w-[120px] relative group">
                        <a href="/courses" class="hover:text-gray-300 hover:underline text-center">Kurslar</a>
                        <!-- Dropdown Menü -->
                        <ul class="hidden group-hover:flex flex-col space-y-2 pl-5">
                            <li class="min-w-[120px]"><a href="/courses" class="hover:text-gray-300 hover:underline text-center">Kurslar</a></li>
                            <li class="min-w-[120px]"><a href="/students" class="hover:text-gray-300 hover:underline text-center">Öğrenci</a></li>
                            <li class="min-w-[120px]"><a href="/teachers" class="hover:text-gray-300 hover:underline text-center">Eğitmen</a></li>
                        </ul>
                    </li>
                    <li class="min-w-[120px]"><a href="/Hakkımızda" class="hover:text-gray-300 hover:underline text-center">Hakkımızda</a></li>
                    <li class="min-w-[120px]"><a href="/haberler" class="hover:text-gray-300 hover:underline text-center">Haberler</a></li>
                    <li class="min-w-[120px]"><a href="/iletisim" class="hover:text-gray-300 hover:underline text-center">İletişim</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="flex-1 bg-gray-100 p-4">
        <main role="main" class="pb-3 h-100 flex items-center justify-center pl-2">
            @RenderBody()
        </main>
    </div>

    <footer class="w-screen flex items-center justify-end h-16">
        <div class="w-screen flex items-center justify-center h-16 bg-sky-600">
            &copy; 2024 - Çimenoğlu Akademi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Anasayfa</a>
        </div>
    </footer>

    <script>
          document.addEventListener('DOMContentLoaded', function () {
        const menuButton = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        // Menü butonuna tıklama olayı
        menuButton.addEventListener('click', function () {
            if (mobileMenu.style.height === '0px') {
                // Menüyü aç
                mobileMenu.style.height = 'var(--height)';
                mobileMenu.classList.remove('animate-slideUp');
                mobileMenu.classList.add('animate-slideDown');
            } else {
                // Menüyü kapat
                mobileMenu.style.height = '0';
                mobileMenu.classList.remove('animate-slideDown');
                mobileMenu.classList.add('animate-slideUp');
            }
        });
    });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
